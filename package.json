{
  "name": "underscoredotspace-blog",
  "version": "1.0.0",
  "description": "Colin's Blog",
  "readme": "README.md",
  "homepage": "https://underscore.space",
  "author": "Colin Tindle <ampersand@underscore.space> (https://underscore.space)",
  "license": "CC-BY-4.0",
  "bugs": {
    "url": "https://github.com/underscoredotspace/blogJS/issues"
  },
  "scripts": {
    "build": "grunt min & grunt lib",
    "build:watch": "grunt",
    "start": "pm2 start app/server --watch",
    "start:watch": "nodemon app/server",
    "stop": "pm2 stop app/server",
    "dev": "yarn build:watch & yarn start:watch",
    "test": "jest",
    "test:watch": "jest --watchAll",
    "test:ci": "jest -i --coverage && cat coverage/lcov.info | coveralls",
    "cover:view": "open coverage/lcov-report/index.html"
  },
  "jest": {
    "collectCoverage": true,
    "collectCoverageFrom": [
      "app/client/src/**/*.js",
      "app/server/*.js",
      "app/server/**/*.js"
    ],
    "roots": [
      "app/client/src",
      "app/server/",
      "app/test"
    ]
  },
  "dependencies": {
    "angular": "^1.6.5",
    "angular-cookies": "^1.6.5",
    "angular-route": "^1.6.5",
    "body-parser": "^1.17.2",
    "cookie-parser": "^1.4.3",
    "dotenv": "^4.0.0",
    "express": "^4.15.3",
    "highlightjs": "^9.10.0",
    "mongoose": "^4.11.3",
    "ng-showdown": "^1.1.0",
    "otp.js": "^1.1.0",
    "otplib": "^7.0.0",
    "qrcode": "^1.2.0",
    "showdown": "^1.7.1",
    "uuid": "^3.2.1"
  },
  "devDependencies": {
    "angular-mocks": "^1.6.5",
    "coveralls": "^3.0.0",
    "grunt": "^1.0.1",
    "grunt-contrib-cssmin": "^2.2.1",
    "grunt-contrib-uglify-es": "git://github.com/gruntjs/grunt-contrib-uglify.git#harmony",
    "grunt-contrib-watch": "^1.0.0",
    "jest": "^22.1.2",
    "nodemon": "^1.11.0",
    "pm2": "^2.6.1",
    "superagent": "^3.8.2",
    "supertest": "^3.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/underscoredotspace/blogJS"
  },
  "keywords": [
    "node",
    "mongodb",
    "express",
    "OTP",
    "blog"
  ]
}
